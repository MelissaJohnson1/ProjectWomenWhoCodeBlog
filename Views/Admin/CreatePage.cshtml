@model QueensOfCodeProject.UI.Models.Page
@{
    ViewBag.Title = "CreatePage";
}

<h2>Create a Page</h2>
<div class="row">
    <form method="post">
        <div class="col-xs-12">
            @Html.TextAreaFor(p => p.PostText, new { @class = "form-control" })
            <label>Title: </label>
            @Html.TextBoxFor(p => p.Title, new { @class = "form-control" })

            <button class="btn btn-primary" type="submit">Save</button>
        </div>
    </form>
</div>

